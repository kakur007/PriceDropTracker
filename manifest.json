{
  "manifest_version": 3,
  "name": "Price Drop Tracker",
  "version": "1.0.0",
  "description": "Automatically track product prices and get notified when they drop. Works across Amazon, eBay, Walmart, Etsy, Shopify stores, and thousands more e-commerce sites.",
  "author": "Price Drop Tracker Team",

  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs",
    "activeTab",
    "scripting",
    "offscreen"
  ],

  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.de/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.it/*",
    "*://*.amazon.es/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.au/*",
    "*://*.amazon.co.jp/*",
    "*://*.amazon.in/*",
    "*://*.amazon.com.mx/*",
    "*://*.amazon.com.br/*",
    "*://*.amazon.nl/*",
    "*://*.amazon.se/*",
    "*://*.ebay.com/*",
    "*://*.ebay.co.uk/*",
    "*://*.ebay.de/*",
    "*://*.ebay.fr/*",
    "*://*.ebay.it/*",
    "*://*.ebay.es/*",
    "*://*.ebay.ca/*",
    "*://*.ebay.com.au/*",
    "*://*.walmart.com/*",
    "*://*.target.com/*",
    "*://*.bestbuy.com/*",
    "*://*.etsy.com/*",
    "*://*.aliexpress.com/*",
    "*://*.newegg.com/*",
    "*://*.costco.com/*",
    "*://*.homedepot.com/*",
    "*://*.lowes.com/*",
    "*://*.wayfair.com/*",
    "*://*.overstock.com/*",
    "*://*.myshopify.com/*"
  ],

  "optional_host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.de/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.it/*",
        "*://*.amazon.es/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.au/*",
        "*://*.amazon.co.jp/*",
        "*://*.amazon.in/*",
        "*://*.amazon.com.mx/*",
        "*://*.amazon.com.br/*",
        "*://*.amazon.nl/*",
        "*://*.amazon.se/*",
        "*://*.ebay.com/*",
        "*://*.ebay.co.uk/*",
        "*://*.ebay.de/*",
        "*://*.ebay.fr/*",
        "*://*.ebay.it/*",
        "*://*.ebay.es/*",
        "*://*.ebay.ca/*",
        "*://*.ebay.com.au/*",
        "*://*.walmart.com/*",
        "*://*.target.com/*",
        "*://*.bestbuy.com/*",
        "*://*.etsy.com/*",
        "*://*.aliexpress.com/*",
        "*://*.newegg.com/*",
        "*://*.costco.com/*",
        "*://*.homedepot.com/*",
        "*://*.lowes.com/*",
        "*://*.wayfair.com/*",
        "*://*.overstock.com/*",
        "*://*.myshopify.com/*"
      ],
      "js": [
        "content-scripts/main.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "content-scripts/*.js",
        "content-scripts/site-adapters/*.js",
        "utils/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },

  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },

  "options_page": "options/settings.html",
  "options_ui": {
    "page": "options/settings.html",
    "open_in_tab": true
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
